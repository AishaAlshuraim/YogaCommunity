
<table class="striped bordered" style="margin: 50px">
 

  <% @videos.each do |video| %>
      <tr>
        <th  colspan="3" style="max-width: 80rem; margin: auto; text-align:center; font-size:50px; text-align: left; margin: auto"  >
<%= link_to video.title, video_path(video) %></th>
        </tr>
       <tr>
        <td style="padding: 10px;" ><%= image_tag(video.url, size: "300x300", alt: "Video Image")%></td>
        <td margin= "auto; margin: 10px"><%= video.des %></td>
        <td><a class="btn-floating btn-large red" href="<%= edit_video_path(video) %>" >
        <em class="large material-icons">Edit Video</em>
        <td><a class="btn-floating btn-large red"  data-method="delete" href="/videos/<%= video.id %>" rel="nofollow"><i class="large material-icons">Delete Video</i>

      </tr>
  <% end %>
<br>
</table>
